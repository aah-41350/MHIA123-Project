{
  "name": "mimic-codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "bash .devcontainer/post_create.sh",
  
  // You can add repo-level secrets under "TAILSCALE_AUTHKEY"
  "remoteEnv": {
    "TAILSCALE_AUTHKEY": "${local:secrets.TAILSCALE_AUTHKEY}"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "mhutchie.git-graph"
      ]
    }
  }
}
