{
  "name": "Codespace + Tailscale + Remote PostgreSQL",
  "build": { "dockerfile": "Dockerfile" },
  "remoteUser": "vscode",
  "containerEnv": {
    "TS_AUTHKEY": "${localEnv:TS_AUTHKEY}",
    "TS_AUTH_ONCE": "true",
    "TS_HOSTNAME": "codespace-dev",
    "TS_EXTRA_ARGS": "--authkey=$TS_AUTHKEY --netfilter-mode=off --accept-routes",
    "TS_TAILSCALED_ARGS": "--tun=userspace-networking --socks5-server=localhost:1055 --state=/var/lib/tailscale/tailscaled.state &"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "lts" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "matthewpi.sqltools-driver-pg",
        "mtxr.sqltools",
        "tamasfe.even-better-toml"
      ]
    }
  }
}