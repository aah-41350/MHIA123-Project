{
  "name": "Codespace with Tailscale + Proxychains + PostgreSQL",

  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },

  "postCreateCommand": "sudo chmod +x /usr/local/bin/run-tailscale && run-tailscale &",

  "mounts": [
    "source=tailscale-state,target=/var/lib/tailscale,type=volume"
  ],

  "remoteUser": "vscode"
}
