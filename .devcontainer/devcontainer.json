{
  "name": "Codespace + Tailscale + Remote PostgreSQL",
  "build": { "dockerfile": "Dockerfile" },
  "remoteUser": "vscode",
  "postCreateCommand": "sudo tailscaled --state=/var/lib/tailscale/tailscaled.state & sleep 3 && sudo tailscale up --authkey=${TS_AUTHKEY} --netfilter-mode=off --accept-routes",
  "containerEnv": {
    "TS_AUTHKEY": "${localEnv:TS_AUTHKEY}",
    "TS_AUTH_ONCE": "true",
    "TS_SOCKS5_SERVER": "localhost:1055",
    "TS_USERSPACE": "true"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "lts" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "matthewpi.sqltools-driver-pg",
        "mtxr.sqltools",
        "tamasfe.even-better-toml"
      ]
    }
  }
}